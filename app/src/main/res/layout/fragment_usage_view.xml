<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false">

    <com.smartpack.kernelmanager.views.XYGraph
        android:id="@+id/usage_graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/usage_offline_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="middle"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/offline"
        android:textAllCaps="true"
        android:textColor="@color/colorOnPrimary"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/usage_load_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:padding="3dp"
        android:textColor="@color/textcolor_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/usage_freq_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:focusable="false"
        android:padding="3dp"
        android:textColor="@color/textcolor_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/usage_core_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:focusable="false"
        android:padding="3dp"
        android:textColor="@color/textcolor_dark"
        android:textSize="12sp" />
</FrameLayout>
