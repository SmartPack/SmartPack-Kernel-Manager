<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">?android:attr/textColorPrimary</item>
        <item name="colorSecondary">?android:attr/colorAccent</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <item name="banner_frame_drawable">@drawable/drawable_frame_light</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">?android:attr/colorBackground</item>
        <item name="colorOnPrimary">?android:attr/textColorPrimary</item>
        <item name="colorSecondary">?android:attr/colorAccent</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <item name="banner_frame_drawable">@drawable/drawable_frame_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Swirl">
        <item name="swirl_errorColor">?attr/colorAccent</item>
        <item name="swirl_ridgeColor">?android:attr/textColorSecondary</item>
    </style>
</resources>